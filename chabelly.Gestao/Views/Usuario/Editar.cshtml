@model chabelly.Model.usuario

@{
    ViewBag.Title = Model.id.Equals(0) ? "Novo Usuário" : "Editar Usuário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <div class="portlet box dark">
            <div class="portlet-title">
                <div class="caption">
                    @if (Model.id.Equals(0))
                    {
                        @:Cadastrar Novo Usuário
                            }
                    else
                    {
                        @:Alterar Usuário
                            }
                </div>
            </div>

            <div class="portlet-body form">
              
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true)


                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-4">
                                <h4>
                                    <label class="control-label">Dados Cadastrais:</label>
                                </h4>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group inline">
                                    <label class="control-label">Nome:</label>
                                    <div>
                                        @Html.TextBoxFor(x => x.nome, new { @class = "form-control", id = "nome_usuario", name = "nome_cultura" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group inline">
                                    <label class="control-label">Email:</label>
                                    <div>
                                        @Html.TextBoxFor(x => x.email, new { @class = "form-control ", id = "email" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group inline">
                                    <label class="control-label">Login:</label>
                                    <div>
                                        @Html.TextBoxFor(x => x.login, new { @class = "form-control ", id = "login" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="form-group inline">
                                    <label class="control-label">Senha:</label>
                                    <div>
                                        @Html.TextBoxFor(x => x.senha, new { @class = "form-control ", id = "senha" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group inline">
                                    <label class="control-label">Dominio:</label>
                                    <div>
                                        @Html.TextBoxFor(x => x.dominio_id, new { @class = "form-control ", id = "senha" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions right">
                        <a href="/Usuario" class="btn yellow"><i class="icon-arrow-left"></i>&nbsp;Voltar</a>
                        @{if (Model.data_desativacao == null)
                            {
                                <button type="submit" class="btn blue-chambray" id="salvar"><i class="icon-check"></i>&nbsp;&nbsp;Salvar</button>
                            }

                        }

                    </div>
                            }
            </div>
        </div>
    </div>
</div>

@section footer {

    <script type="text/javascript">


   

    </script>


}
