@model chabelly.Gestao.Models.Pagination<chabelly.Model.categoria>
@{
    Layout = null;
}
@if (Model.Model.Any())
{
    <div class="table-scrollable">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th align="center" style="width: 50px; text-align: center">#</th>
                    <th>Nome</th>
                    <th>Data Criacao</th>
                    <th>Status</th>
                    <th>Categoria Pai</th>
                </tr>
            </thead>
            <tbody>
                @{ var count = 0; }
                @foreach (var item in Model.Model)
                {
                    <tr class="@(count++%2 == 0 ? "row0" : "row1") @(count == 1 ? "first" : "")">
                        <td style="width: auto">
                            <a href="@Url.Action("Editar", new { id = @item.id })" alt="Editr" title="Editar"><i class="fa fa-edit"></i></a>
                        </td>
                        <td>@item.nome</td>
                        <td>@item.data_criacao.ToString("dd/MM/yyyy")</td>
                        @if (item.data_desativacao == null)
	                    {
		                     <td><span class="btn btn-circle green-dark">Ativo</span></td>
                        }
                        else
                        {
                            <td><span class="btn btn-circle red-thunderbird">Inativo</span></td>
                        }
                        @if (item.categoria_pai != null)
                        {
                            <td>@item.categoria2.nome</td>
                        }
                        else
                        {
                                <td>-   </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="clearfix"></div>
                    }
                    else
                    {
                        <div class="clearfix"></div>
                        <h2 style="text-align:center">Nenhum registro encontrado.</h2><br />

                    }



