@model List<chabelly.Model.grupo>
@{
    Layout = null;
}
@if (Model.Any())
{
    <div class="table-scrollable">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th align="center" style="width: 50px; text-align: center">#</th>
                    <th>Nome</th>
                </tr>
            </thead>
            <tbody>
                @{ var count = 0; }
                @foreach (var item in Model)
                {
                    <tr class="@(count++%2 == 0 ? "row0" : "row1") @(count == 1 ? "first" : "")">
                        <td style="width: auto">
                            <a href="@Url.Action("Editar", new { id = @item.id })" alt="Editr" title="Editar"><i class="fa fa-edit"></i></a>
                        </td>
                        <td>@item.nome</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="clearfix"></div>
                    }
                    else
                    {
                        <div class="clearfix"></div>
                        <h2 style="text-align:center">Nenhum registro encontrado.</h2><br />

                    }



